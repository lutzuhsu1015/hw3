package hw3;

public class p31 {
	public static void main(String[] args)
	{
		Carp31.showSum();
		
		Carp31 car1;
		car1 = new Carp31();
		car1.setCar(1234,20.5);
		
		Carp31 car2;
		car2 = new Carp31();
		car2.setCar(4567,30.g);
	}
}

//Car類別
class Carp31
{
	private int num;
	private double gas;
	
	public Carp31()
	{
		num = 0;
		gas = 0.0;
		System.out.println("生產了車子");
	}
	
	public Carp31(int n,double g)
	{
		num = n;
		gas = g;
		System.out.println("生產的車號為"+num+"，汽油輛違"+gas+"的車子");
	}
	
	public void show()
	{
		System.out.println("車號:"+num);
		System.out.println("氣油量:"+gas);
	}

}